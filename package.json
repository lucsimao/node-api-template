{
  "name": "node-api-template",
  "version": "1.0.0",
  "main": "index.js",
  "author": "lucsimao <lucasimao64@gmail.com>",
  "repository": "https://github.com/lucsimao/node-api-template",
  "license": "MIT",
  "scripts": {
    "build": "tsc && cp src/api.schema.yaml dist/src/api.schema.yaml",
    "start": "yarn build && node dist/src/index.js ",
    "test": "yarn lint && yarn style:check && yarn test:unit && yarn test:functional",
    "test:unit": "jest --config ./config/jest/jest.unit.config.js --forceExit",
    "test:functional": "jest --config ./config/jest/jest.functional.config.js --forceExit --runInBand",
    "test:mutation": "stryker run",
    "lint": "eslint ./src ./test --ext .ts",
    "lint:fix": "eslint ./src ./test --ext .ts --fix",
    "style:check": "prettier --check src/**/*.ts test/**/*.ts",
    "style:fix": "prettier --write src/**/*.ts test/**/*.ts"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.0",
    "@commitlint/config-conventional": "^13.2.0",
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/commit-analyzer": "^9.0.1",
    "@semantic-release/git": "^10.0.0",
    "@semantic-release/github": "^8.0.1",
    "@semantic-release/npm": "^8.0.0",
    "@semantic-release/release-notes-generator": "^10.0.2",
    "@stryker-mutator/core": "^5.4.0",
    "@stryker-mutator/jest-runner": "^5.4.0",
    "@types/jest": "^26.0.24",
    "@types/pino": "^6.3.11",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "conventional-changelog-conventionalcommits": "^4.4.0",
    "eslint": "^7.32.0",
    "husky": "^7.0.2",
    "jest": "^27.0.6",
    "prettier": "^2.4.1",
    "semantic-release": "^18.0.0",
    "ts-jest": "^27.0.4",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "pino": "^6.13.3"
  }
}
