{
  "name": "node-api-template",
  "version": "1.0.0",
  "main": "src/index.js",
  "author": "lucsimao <lucasimao64@gmail.com>",
  "repository": "https://github.com/lucsimao/node-api-template",
  "license": "MIT",
  "scripts": {
    "build": "tsc && cp src/api.schema.yaml dist/src/api.schema.yaml",
    "start": "node dist/src/index.js",
    "start:local": "dotenv -e .env -- ts-node-dev src/index.ts",
    "test": "yarn lint && yarn style:check && yarn test:unit && yarn test:functional",
    "test:unit": "dotenv -e envs/test.env -- jest --config ./config/jest/jest.unit.config.js --coverage --detectOpenHandles ",
    "test:functional": "dotenv -e envs/test.env -- jest --config ./config/jest/jest.functional.config.js --forceExit --runInBand",
    "test:mutation": "dotenv -e envs/test.env -- stryker run",
    "lint": "eslint ./src ./test --ext .ts",
    "lint:fix": "eslint ./src ./test --ext .ts --fix",
    "style:check": "prettier --check src/**/*.ts test/**/*.ts",
    "style:fix": "prettier --write src/**/*.ts test/**/*.ts"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.0",
    "@commitlint/config-conventional": "^13.2.0",
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/commit-analyzer": "^9.0.1",
    "@semantic-release/git": "^10.0.0",
    "@semantic-release/github": "^8.0.1",
    "@semantic-release/npm": "^8.0.0",
    "@semantic-release/release-notes-generator": "^10.0.2",
    "@stryker-mutator/core": "^5.4.0",
    "@stryker-mutator/jest-runner": "^5.4.0",
    "@types/bcrypt": "^5.0.0",
    "@types/elasticsearch": "^5.0.38",
    "@types/express": "^4.17.13",
    "@types/express-rate-limit": "^5.1.3",
    "@types/jest": "^27.0.2",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^13.13.2",
    "@types/pino": "^6.3.11",
    "@types/supertest": "^2.0.11",
    "@types/swagger-stats": "^0.95.4",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "conventional-changelog-conventionalcommits": "^4.4.0",
    "eslint": "^7.32.0",
    "husky": "^7.0.2",
    "jest": "^27.2.5",
    "prettier": "^2.4.1",
    "semantic-release": "^18.0.0",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.4",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "date-fns": "^2.24.0",
    "dotenv-cli": "^4.0.0",
    "elasticsearch": "^16.7.2",
    "express": "^4.17.1",
    "express-rate-limit": "^5.4.1",
    "http-status-codes": "^2.1.4",
    "joi": "^17.4.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.0.8",
    "openapi-comment-parser": "^1.0.0",
    "pino": "^6.13.3",
    "swagger-stats": "^0.99.2",
    "swagger-ui-express": "^4.1.6"
  }
}
